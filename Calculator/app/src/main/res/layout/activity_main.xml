<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.MainActivity"
    android:background="@color/black">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.33"
        android:text=""
        android:gravity="bottom|right"
        android:textColor="@color/white"
        android:textSize="46sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="8dp"/>

    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.56"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintTop_toBottomOf="@id/result"
        android:columnCount="4"
        android:rowCount="4"
        >
        <Button
            android:tag="set"
            android:text="AC"
            style="@style/button_style"
            android:textColor="@color/black"
            android:background="@drawable/soft_grey_button_circle_bg"/>
        <Button
            android:tag="opposite"
            android:text="+/-"
            style="@style/button_style"
            android:textColor="@color/black"
            android:background="@drawable/soft_grey_button_circle_bg"/>
        <Button
            android:tag="operator"
            android:text="%"
            style="@style/button_style"
            android:textColor="@color/black"
            android:background="@drawable/soft_grey_button_circle_bg"/>
        <Button
            android:tag="operator"
            android:text="/"
            style="@style/button_style"
            android:textColor="@color/white"
            android:background="@drawable/yellow_button_circle_bg"/>
        <Button
            android:tag="number"
            android:text="7"
            style="@style/button_style"
            android:textColor="@color/white"
            android:background="@drawable/deep_grey_button_circle_bg"/>
        <Button
            android:tag="number"
            android:text="8"
            style="@style/button_style"
            android:textColor="@color/white"
            android:background="@drawable/deep_grey_button_circle_bg"/>
        <Button
            android:tag="number"
            android:text="9"
            style="@style/button_style"
            android:textColor="@color/white"
            android:background="@drawable/deep_grey_button_circle_bg"/>
        <Button
            android:tag="operator"
            android:text="*"
            style="@style/button_style"
            android:textColor="@color/white"
            android:background="@drawable/yellow_button_circle_bg"/>
        <Button
            android:tag="number"
            android:text="4"
            style="@style/button_style"
            android:textColor="@color/white"
            android:background="@drawable/deep_grey_button_circle_bg"/>
        <Button
            android:tag="number"
            android:text="5"
            style="@style/button_style"
            android:textColor="@color/white"
            android:background="@drawable/deep_grey_button_circle_bg"/>
        <Button
            android:tag="number"
            android:text="6"
            style="@style/button_style"
            android:textColor="@color/white"
            android:background="@drawable/deep_grey_button_circle_bg"/>
        <Button
            android:tag="operator"
            android:text="-"
            style="@style/button_style"
            android:textColor="@color/white"
            android:background="@drawable/yellow_button_circle_bg"/>
        <Button
            android:id="@+id/btn1"
            android:tag="number"
            android:text="1"
            style="@style/button_style"
            android:textColor="@color/white"
            android:background="@drawable/deep_grey_button_circle_bg"/>
        <Button
            android:id="@+id/btn2"
            android:tag="number"
            android:text="2"
            style="@style/button_style"
            android:textColor="@color/white"
            android:background="@drawable/deep_grey_button_circle_bg"/>
        <Button
            android:id="@+id/btn3"
            android:tag="number"
            android:text="3"
            style="@style/button_style"
            android:textColor="@color/white"
            android:background="@drawable/deep_grey_button_circle_bg"/>
        <Button
            android:id="@+id/btn_add"
            android:tag="operator"
            android:text="+"
            style="@style/button_style"
            android:textColor="@color/white"
            android:background="@drawable/yellow_button_circle_bg"/>
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintDimensionRatio="h,4:1"
        app:layout_constraintTop_toBottomOf="@id/grid_layout"
        >
        <Button
            android:layout_margin="8dp"
            android:textSize="28sp"
            android:tag="number"
            android:text="0"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textColor="@color/white"
            android:onClick="onClick"
            android:background="@drawable/deep_grey_button_bg" />
        <Button
            android:layout_margin="8dp"
            android:textSize="28sp"
            android:tag="number"
            android:text="."
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:onClick="onClick"
            android:background="@drawable/deep_grey_button_circle_bg"/>
        <Button
            android:layout_margin="8dp"
            android:textSize="28sp"
            android:tag="operator"
            android:text="="
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:onClick="onClick"
            android:background="@drawable/yellow_button_circle_bg"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>